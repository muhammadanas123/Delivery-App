<div class="container col-md-5">
    <h1>journey#index</h1>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
            <th scope="col">#</th>
            <th scope="col">From</th>
            <th scope="col">To</th>
            <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% @journeys.each do | journey | %>
                <tr>
                    <th scope="row">1</th>
                    <td><%=journey.from%></td>
                    <td><%=journey.to%></td>
                    <td>
                        <%= link_to "view", journey_path(journey), class: "btn btn-outline-info btn-sm"%>
                        <%= link_to "edit", edit_journey_path(journey), class: "btn btn-outline-success btn-sm" %>
                        <%= link_to "delete", journey_path(journey), method: :delete, class: "btn btn-outline-danger btn-sm" %>
                    </td>
                </tr>
            <%end%>
        </tbody>
    </table>
</div>