<div class="container">
    <h1>order#index</h1>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
            <th scope="col">#</th>
            <th scope="col">Sender</th>
            <th scope="col">Receiver</th>
            <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% @orders.each do | order | %>
                <tr>
                    <th scope="row">1</th>
                    <td><%=current_user.firstname%></td>
                    <td><%=order.receiver_name%></td>
                    <td>
                        <%= link_to "view", order_path(order), class: "btn btn-outline-info btn-sm"%>
                        <% if current_user.has_role? :sender %>
                            <%= link_to "edit", edit_order_path(order), class: "btn btn-outline-success btn-sm" %>
                            <%= link_to "delete", order_path(order), method: :delete, class: "btn btn-outline-danger btn-sm" %> 
                        <%end%>
                    </td>
                </tr>
            <%end%>
        </tbody>
    </table>
</div>